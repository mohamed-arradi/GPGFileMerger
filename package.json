{
  "name": "gpg-merger",
  "version": "1.0.0",
  "description": "GPG File Merger is the perfect software to merge mutliple gpg files in one singular gpg file. All separations and formatting is doing under the hook for you.",
  "productName": "GPG File Merger",
  "main": "app.js",
  "icon": "./build/icon.icns",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "postinstall": "electron-builder install-app-deps",
    "dist": "electron-builder"
  },
  "repository": "https://github.com/mohamed-arradi/GPGFileMerger",
  "keywords": [
    "gpg",
    "merger",
    "GNU Privacy Guard",
    "file merger",
    "encrypted",
    "secure",
    "gpg encrypt",
    "linux",
    "text file"
  ],
  "license": "GNU",
  "author": "Mohamed Arradi-Alaoui",
  "devDependencies": {
    "electron": "^13.1.8",
    "electron-builder": "^22.11.7",
    "electron-installer-snap": "^5.1.0"
  },
  "build": {
    "appId": "com.soft.gpgmerger",
    "productName": "GPG File Merger",
    "linux": {
      "category": "Utility",
      "synopsis": "GPG File Merger is the perfect software to merge mutliple gpg files in one singular gpg file. All separations and formatting is doing under the hook for you."
    },
    "snap": {
      "confinement": "classic",
      "plugs": [
        "desktop",
        "desktop-legacy",
        "gsettings",
        "home",
        "browser-support",
        "opengl",
        "gpg-public-keys",
        "process-control",
        "system-observe",
        "gpg-keys",
        {
          "personal-files": {
            "read": [
              "$HOME/GPGFileMerger"
            ],
            "write": [
              "$HOME/GPGFileMerger"
            ]
          }
        }
      ]
    }
  },
  "dmg": {
    "background": null,
    "backgroundColor": "#ffffff",
    "window": {
      "width": "400",
      "height": "300"
    },
    "contents": [
      {
        "x": 100,
        "y": 100
      },
      {
        "x": 300,
        "y": 100,
        "type": "link",
        "path": "/Applications"
      }
    ]
  },
  "mac": {
    "target": "dmg",
    "category": "public.app-category.utilities"
  },
  "dependencies": {
    "chokidar": "^3.5.2",
    "dateformat": "^4.5.1",
    "drag-drop": "^7.2.0",
    "electron-progressbar": "^2.0.1",
    "electron-prompt": "^1.6.2",
    "exec-pgp": "0.0.1",
    "fs-extra": "^10.0.0",
    "gpg": "^0.6.0",
    "make-synchronous": "^0.1.1",
    "open": "^8.2.1"
  }
}
